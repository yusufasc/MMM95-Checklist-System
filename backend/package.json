{
  "name": "mmm-checklist-backend",
  "version": "1.0.0",
  "description": "Serinova 360 - Endüstriyel Ekipman Yönetim Sistemi Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node --max-http-header-size=32768 server.js",
    "dev": "nodemon --max-http-header-size=32768 server.js",
    "start:dev": "nodemon --max-http-header-size=32768 server.js",
    "debug": "node --inspect --max-http-header-size=32768 server.js",
    "debug:dev": "nodemon --inspect --max-http-header-size=32768 server.js",
    "debug:brk": "node --inspect-brk --max-http-header-size=32768 server.js",
    "create-test-data": "node scripts/createTestData.js",
    "update-role-permissions": "node scripts/updateRolePermissions.js",
    "create-test-tasks": "node scripts/createTestTasks.js",
    "create-more-users": "node scripts/createMoreUsers.js",
    "test-checklist-creation": "node scripts/testChecklistCreation.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "format:fix": "npm run format",
    "quality:check": "npm run lint:check && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format:fix",
    "health:check": "npm run quality:check && npm run test --passWithNoTests",
    "precommit": "npm run quality:fix",
    "analyze:deps": "npm ls --depth=0",
    "analyze:security": "npm audit",
    "analyze:size": "du -sh .",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "equipment-management",
    "industrial",
    "maintenance",
    "inventory",
    "performance",
    "checklist",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Serinova 360 Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "form-data": "^4.0.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "redis": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
