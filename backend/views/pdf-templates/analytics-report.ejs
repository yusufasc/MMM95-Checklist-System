                                <td><%= dept.meetings %></td>
                                <td><%= dept.tasks %></td>
                                <td><%= dept.completion %>%</td>
                                <td>
                                    <span class="status-indicator <%= dept.completion > 80 ? 'status-success' : dept.completion > 60 ? 'status-warning' : 'status-error' %>">
                                        <%= dept.completion > 80 ? 'M√ºkemmel' : dept.completion > 60 ? 'ƒ∞yi' : 'Geli≈ütirilmeli' %>
