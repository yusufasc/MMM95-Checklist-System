# MMM95 Backend Environment Variables Template
# Bu dosyayı .env olarak kopyalayın ve gerçek değerlerle doldurun

# ===== DATABASE CONFIGURATION =====
# MongoDB bağlantı string'i
MONGODB_URI=mongodb://localhost:27017/mmm95_database
# Alternatif: MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mmm95_database

# ===== SERVER CONFIGURATION =====
# Backend server portu
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# ===== AUTHENTICATION =====
# JWT secret key (güçlü bir secret kullanın)
JWT_SECRET=your-super-secret-jwt-key-here-change-this
JWT_EXPIRES_IN=7d

# Session secret
SESSION_SECRET=your-session-secret-here-change-this

# ===== FILE UPLOAD =====
# File upload size limit (bytes)
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=uploads

# ===== EMAIL CONFIGURATION =====
# Email service provider
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@mmm95.com

# ===== EXTERNAL SERVICES =====
# External API keys (eğer varsa)
# EXTERNAL_API_KEY=your-api-key-here

# ===== LOGGING =====
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log directory
LOG_DIR=logs

# ===== CACHE CONFIGURATION =====
# Redis URL (eğer Redis kullanıyorsanız)
# REDIS_URL=redis://localhost:6379

# Cache TTL (seconds)
CACHE_TTL=3600

# ===== DEVELOPMENT SETTINGS =====
# Debug mode
DEBUG=mmm95:*

# Enable hot reload
HOT_RELOAD=true

# Database seeding (development only)
SEED_DATABASE=false

# ===== PRODUCTION SETTINGS =====
# Rate limiting (requests per window)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Enable compression
ENABLE_COMPRESSION=true

# Enable HTTPS (production)
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ===== MONITORING =====
# Error tracking service (Sentry, etc.)
# ERROR_TRACKING_DSN=

# Performance monitoring
# PERFORMANCE_MONITORING=false