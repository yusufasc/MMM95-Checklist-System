# MMM95 Frontend Environment Variables Template  
# Bu dosyayı .env olarak kopyalayın ve gerçek değerlerle doldurun

# ===== API CONFIGURATION =====
# Backend API base URL
REACT_APP_API_URL=http://localhost:5000/api

# API timeout (milliseconds)
REACT_APP_API_TIMEOUT=10000

# ===== APPLICATION SETTINGS =====
# App title
REACT_APP_TITLE=MMM95 Checklist System

# App version
REACT_APP_VERSION=1.0.0

# Environment (development, staging, production)
REACT_APP_ENV=development

# Debug mode
REACT_APP_DEBUG=true

# ===== FEATURES =====
# Enable/disable features
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_PWA=true

# Default language
REACT_APP_DEFAULT_LANGUAGE=tr

# ===== UI SETTINGS =====
# Theme configuration
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e

# Default items per page
REACT_APP_DEFAULT_PAGE_SIZE=10

# Max file upload size (bytes)
REACT_APP_MAX_FILE_SIZE=5242880

# ===== CACHE SETTINGS =====
# Local storage keys prefix
REACT_APP_STORAGE_PREFIX=mmm95_

# Cache duration (milliseconds)
REACT_APP_CACHE_DURATION=300000

# ===== EXTERNAL SERVICES =====
# Google Analytics (eğer kullanılıyorsa)
# REACT_APP_GA_TRACKING_ID=

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=

# ===== PWA SETTINGS =====
# Service worker registration
REACT_APP_SW_ENABLED=true

# PWA display mode
REACT_APP_PWA_DISPLAY=standalone

# ===== DEVELOPMENT SETTINGS =====
# Hot reload
FAST_REFRESH=true

# Generate source maps
GENERATE_SOURCEMAP=true

# Bundle analyzer
REACT_APP_BUNDLE_ANALYZE=false

# ===== BUILD SETTINGS =====
# Build path
BUILD_PATH=build

# Public URL (production)
PUBLIC_URL=/

# Image optimization
REACT_APP_IMAGE_OPTIMIZATION=true

# ===== SECURITY SETTINGS =====
# Content Security Policy
REACT_APP_CSP_ENABLED=false

# HTTPS only cookies
REACT_APP_SECURE_COOKIES=false