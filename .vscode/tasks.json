{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🚀 Start Backend",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\node.exe",
      "args": ["server.js"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Server starting.*$",
          "endsPattern": "^.*Server started.*$"
        }
      }
    },
    {
      "label": "🎮 Start Frontend",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\npm.cmd",
      "args": ["start"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack-dev-server",
          "endsPattern": "webpack: Compiled successfully"
        }
      }
    },
    {
      "label": "📦 Install Backend Dependencies",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\npm.cmd",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "📦 Install Frontend Dependencies",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\npm.cmd",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "🧹 Clean Install",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "Remove-Item -Recurse -Force -Path node_modules, package-lock.json -ErrorAction SilentlyContinue; npm install"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "🔍 ESLint Check",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\npm.cmd",
      "args": ["run", "lint"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "🧪 Run Tests",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\npm.cmd",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "📊 Run Script",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\node.exe",
      "args": ["${input:scriptFile}"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "🗄️ MongoDB Connect Test",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\node.exe",
      "args": ["-e", "const mongoose = require('mongoose'); mongoose.connect('mongodb://localhost:27017/mmm-checklist').then(() => { console.log('✅ MongoDB bağlantısı başarılı'); process.exit(0); }).catch(err => { console.error('❌ MongoDB bağlantı hatası:', err.message); process.exit(1); });"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "scriptFile",
      "description": "Script dosyası seç",
      "type": "pickString",
      "options": [
        "scripts/setup/create-standard-modules.js",
        "scripts/setup/createPlasticInjectionCategories.js",
        "scripts/create-admin-user.js",
        "scripts/recreate-roles.js",
        "scripts/create-department.js",
        "scripts/data/createTestUsers.js",
        "scripts/data/createTestMachines.js",
        "scripts/data/createTestTasks.js",
        "scripts/create-ortaci-checklist.js",
        "scripts/create-paketlemeci-checklist.js"
      ]
    }
  ]
}