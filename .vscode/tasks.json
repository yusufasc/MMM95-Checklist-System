{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üîß Backend Debug",
      "type": "shell",
      "command": "npm",
      "args": ["run", "debug"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "‚öõÔ∏è Frontend Start",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "üî® Fix All ESLint Errors",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", ".\\fix-all.bat"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    // GitLens ile entegre Git komutlarƒ±
    {
      "label": "üìä Git Status (GitLens Enhanced)",
      "type": "shell",
      "command": "git",
      "args": ["status", "--porcelain", "--branch"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üå≥ Git Log (GitLens Format)",
      "type": "shell",
      "command": "git",
      "args": [
        "log",
        "--oneline",
        "--graph",
        "--decorate",
        "--all",
        "--max-count=20",
        "--date=format:%d/%m/%Y %H:%M",
        "--pretty=format:%C(yellow)%h%C(reset) %C(blue)%ad%C(reset) %C(green)%an%C(reset) %s %C(red)%d%C(reset)"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Git Diff (Working Directory)",
      "type": "shell",
      "command": "git",
      "args": ["diff", "--stat"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üìà Git Contributors Stats",
      "type": "shell",
      "command": "git",
      "args": ["shortlog", "-sn", "--all", "--no-merges"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üîÑ Git Pull + Status",
      "type": "shell",
      "command": "git",
      "args": ["pull", "&&", "git", "status"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üíæ Quick Commit (GitLens)",
      "type": "shell",
      "command": "git",
      "args": ["add", ".", "&&", "git", "commit", "-m", "\"${input:commitMessage}\""],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "description": "Commit mesajƒ±nƒ± girin (T√ºrk√ße)",
      "default": "feat: yeni √∂zellik eklendi",
      "type": "promptString"
    }
  ]
}
