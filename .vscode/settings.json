{
  // ===== GEREKSÄ°Z DOSYA HATALARINI ENGELLE =====
  "files.associations": {
    "*.md": "markdown",
    "*.mdc": "markdown"
  },
  
  // ===== PROBLEM TRACKING EXCLUDE =====
  "problems.decorations.enabled": false,
  "typescript.suggest.includeCompletionsForModuleExports": false,
  
  // ===== MARKDOWNLINT DISABLE =====
  "markdownlint.ignore": [
    "**/.github/**",
    "**/docs/**", 
    "**/README.md",
    "**/CHANGELOG.md",
    "**/LICENSE",
    "**/SECURITY.md",
    "**/*TEMPLATE.md",
    "**/*QUICK-START.md",
    "**/*RULE-*.md"
  ],
  
  // ===== ESLINT IGNORE PATTERNS =====
  "eslint.workingDirectories": ["backend", "frontend"],
  "eslint.options": {
    "ignorePattern": [
      "**/*.md",
      "**/.github/**",
      "**/docs/**",
      "**/tools/**",
      "**/scripts/**",
      "**/*.config.js",
      "**/CHANGELOG.md",
      "**/README.md",
      "**/LICENSE"
    ]
  },
  
  // ===== TYPESCRIPT IGNORE =====
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.validate.enable": false,
  
  // ===== JSON SCHEMA DISABLE =====
  "json.validate.enable": false,
  "yaml.validate": false,
  
  // ===== FILE WATCHING EXCLUDE =====
  "files.watcherExclude": {
    "**/.github/**": true,
    "**/docs/**": true,
    "**/tools/**": true,
    "**/*.md": true,
    "**/CHANGELOG.md": true,
    "**/README.md": true,
    "**/LICENSE": true
  },
  
  // ===== PROBLEM EXCLUDE =====
  "problems.sortOrder": "severity",
  "problems.showCurrentInStatus": false
}