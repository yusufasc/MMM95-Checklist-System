    "autoActivation": {
      "enabled": true,
      "maxActiveRules": 4,
      "priority": "contextual",
      "fallback": ["core-cursor.mdc"]
    },

    "manualOverride": {
      "enabled": true,
      "commands": {
        "@backend": ["backend-cursor.mdc", "core-cursor.mdc"],
        "@frontend": ["frontend-cursor.mdc", "mobile-pwa-cursor.mdc"],
        "@database": ["database-cursor.mdc", "backend-cursor.mdc"],
        "@security": ["security-cursor.mdc", "backend-cursor.mdc"],
        "@debug": [
          "debugging-troubleshooting-cursor.mdc",
