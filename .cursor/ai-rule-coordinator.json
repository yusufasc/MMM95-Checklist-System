        "@test": ["testing-cursor.mdc", "eslint-performance-cursor.mdc"],
        "@deploy": ["deployment-cursor.mdc", "security-cursor.mdc"],
        "@docs": ["api-documentation-cursor.mdc", "core-cursor.mdc"],
        "@performance": [
          "eslint-performance-cursor.mdc",
          "monitoring-logging-cursor.mdc"
