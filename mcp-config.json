{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:\\Users\\yusuf\\OneDrive\\Masaüstü\\MMM95"
      ],
      "env": {
        "NODE_ENV": "development",
        "MCP_FS_READ_ONLY": "false",
        "MCP_FS_ALLOW_DOTFILES": "true"
      }
    },
    "mongodb": {
      "command": "npx",
      "args": ["-y", "mongodb-mcp-server"],
      "env": {
        "MONGODB_URI": "mongodb://localhost:27017/mmm-checklist",
        "MONGODB_DATABASE": "mmm-checklist",
        "MONGODB_TIMEOUT": "30000",
        "MONGODB_MAX_POOL_SIZE": "10"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MCP_MEMORY_MAX_ENTITIES": "10000",
        "MCP_MEMORY_PERSISTENCE": "true"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {
        "MCP_THINKING_MAX_STEPS": "50",
        "MCP_THINKING_TIMEOUT": "120000"
      }
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "puppeteer-mcp-server"],
      "env": {
        "PUPPETEER_HEADLESS": "true",
        "PUPPETEER_TIMEOUT": "30000"
      }
    },
    "ref-tools": {
      "command": "npx",
      "args": ["-y", "ref-tools-mcp"],
      "env": {
        "REF_TOOLS_CACHE_SIZE": "1000",
        "REF_TOOLS_TIMEOUT": "15000"
      }
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "figma-mcp"],
      "env": {
        "FIGMA_API_TOKEN": ""
      }
    },
    "hyper-shell": {
      "command": "npx",
      "args": ["-y", "hyper-mcp-shell"],
      "env": {
        "SHELL_TIMEOUT": "30000",
        "SHELL_MAX_HISTORY": "1000"
      }
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": ""
      }
    }
  }
}
